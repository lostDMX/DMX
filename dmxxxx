local player = game.Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")

-- حذف الشاشة القديمة لو فيه وحدة
if playerGui:FindFirstChild("InspectionGui") then
	playerGui.InspectionGui:Destroy()
end

-- إنشاء الواجهة
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "InspectionGui"
screenGui.ResetOnSpawn = false
screenGui.IgnoreGuiInset = true
screenGui.Parent = playerGui

-- إنشاء الخلفية المتغيرة اللون
local bg = Instance.new("Frame")
bg.Size = UDim2.new(1, 0, 1, 0)
bg.Position = UDim2.new(0, 0, 0, 0)
bg.BackgroundColor3 = Color3.new(1, 0, 0)
bg.BorderSizePixel = 0
bg.Parent = screenGui

-- إنشاء النص المتحرك
local textLabel = Instance.new("TextLabel")
textLabel.Size = UDim2.new(1, 0, 0.2, 0)
textLabel.Position = UDim2.new(0, 0, 0.4, 0)
textLabel.BackgroundTransparency = 1
textLabel.Text = "ياهطف"
textLabel.TextScaled = true
textLabel.Font = Enum.Font.GothamBlack
textLabel.TextColor3 = Color3.new(1, 1, 1)
textLabel.Parent = screenGui

-- وظيفة لتغيير الألوان بشكل عشوائي
local function randomColor()
	return Color3.fromRGB(math.random(50,255), math.random(50,255), math.random(50,255))
end

-- تحريك وتلوين النص والخلفية
spawn(function()
	while true do
		bg.BackgroundColor3 = randomColor()
		textLabel.TextColor3 = randomColor()
		
		-- تحريك النص يمين ويسار
		for i = 0, 1, 0.02 do
			textLabel.Position = UDim2.new(i, 0, 0.4, 0)
			wait(0.01)
		end
		for i = 1, 0, -0.02 do
			textLabel.Position = UDim2.new(i, 0, 0.4, 0)
			wait(0.01)
		end
	end
end)
